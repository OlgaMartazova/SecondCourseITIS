<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".ProfileActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/firstPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        />
    <ImageButton
        android:id="@+id/ib_add_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_outline_person_add_alt_1_24"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@id/tv_account_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/firstPanel"
        android:layout_marginStart="20dp">
    </ImageButton>

    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/all_ga"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/ib_add_person"
        app:layout_constraintTop_toTopOf="@id/firstPanel"
        app:layout_constraintEnd_toStartOf="@id/ib_more"
        >
    </TextView>

    <ImageButton
        android:id="@+id/ib_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_outline_more_vert_24"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/tv_account_name"
        app:layout_constraintTop_toTopOf="@id/firstPanel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp">
    </ImageButton>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/secondPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="48dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile2"
        app:layout_constraintTop_toBottomOf="@id/secondPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_olga"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar"
        >
    </TextView>

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_olga"
        android:visibility="invisible"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar"
        android:autofillHints="edit name">
    </EditText>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/thirdPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3"
        />

    <TextView
        android:id="@+id/tv_following_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="@id/thirdPanel"
        app:layout_constraintEnd_toStartOf="@id/tv_followers_num"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <TextView
        android:id="@+id/tv_followers_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/thirdPanel"
        app:layout_constraintStart_toEndOf="@id/tv_following_num"
        app:layout_constraintEnd_toStartOf="@id/tv_likes_num">
    </TextView>

    <TextView
        android:id="@+id/tv_likes_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_27"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/thirdPanel"
        app:layout_constraintStart_toEndOf="@id/tv_followers_num"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fourthPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".34" />

    <TextView
        android:id="@+id/tv_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/following"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_following_num"
        app:layout_constraintEnd_toEndOf="@id/tv_following_num"
        app:layout_constraintTop_toTopOf="@id/fourthPanel"
        />

    <TextView
        android:id="@+id/tv_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/followers"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_followers_num"
        app:layout_constraintEnd_toEndOf="@id/tv_followers_num"
        app:layout_constraintTop_toTopOf="@id/fourthPanel"
        />

    <TextView
        android:id="@+id/tv_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/likes"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_likes_num"
        app:layout_constraintEnd_toEndOf="@id/tv_likes_num"
        app:layout_constraintTop_toTopOf="@id/fourthPanel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fifthPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".38" />
    <Button
        android:id="@+id/b_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fifthPanel"
        />
    
        
        

</androidx.constraintlayout.widget.ConstraintLayout>
